{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "lib": ["es2016", "dom"], 
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": ["src/**/*", "*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
